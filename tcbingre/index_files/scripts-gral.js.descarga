require([
'jquery',
'domReady!'
], function ($) {

// add class open navigation

	$(".nav-1 > a").click(function(){
		if ($("body").hasClass("openmenu")){
			$("body").removeClass("openmenu");
		}
		else{
			$("body").addClass("openmenu");
		}
	});

	$(document).on("click", function (e) {
	    if (!$(e.target).closest(".nav-1").length) 
	        $("body").removeClass("openmenu");
	});

});

